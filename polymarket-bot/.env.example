# .env.example
# Copy this file to .env and fill in your values

# Required: Your Ethereum private key (DO NOT SHARE OR COMMIT THIS)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Polygon RPC endpoint
RPC_URL=https://polygon-rpc.com

# Polymarket CLOB API URL
CLOB_API_URL=https://clob.polymarket.com

# Chain ID (137 for Polygon mainnet, 80001 for Mumbai testnet)
CHAIN_ID=137

# Trading parameters
SPREAD_PERCENTAGE=0.02  # 2% spread for market making
ORDER_SIZE=10  # Size in USDC
MIN_PROFIT=0.01  # Minimum profit threshold

# Token to trade (condition token ID)
TOKEN_ID=0xYOUR_TOKEN_ID_HERE

# Strategy: market_making or copy_trading
STRATEGY=market_making

# For copy trading: address to copy
TARGET_ADDRESS=0xADDRESS_TO_COPY

# Contract addresses (default to Polygon mainnet)
CTF_EXCHANGE=0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E
COLLATERAL_TOKEN=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Safety controls
DRY_RUN=true
ENABLE_LIVE_TRADING=false
LOG_LEVEL=INFO
INTERVAL=30
PRECHECK_ONLY=false
PREFLIGHT_TIMEOUT=10
